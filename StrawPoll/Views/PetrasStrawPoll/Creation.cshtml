<body class="card bg-light  mb-3">

    <div class="card  mb-3">

        <div class="card-header text-dark bg-primary mb-3 text-center"><h1> <img src="../../Content/logo.jpg" />                        Petra's Straw Poll</h1></div>
        <div class="card-body text-primary">
            <h2 class="card-title text-dark text-center">
                Création du sondage
            </h2>
            <p></p>
            <form>
                <div class="form-group row">
                    <label for="inputQuestion" class="col-sm-2 col-form-label">Question :</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputQuestion" placeholder="Saissisez votre question svp">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputReponse1" class="col-sm-2 col-form-label">Réponse 1 :</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputReponse1" placeholder="Entrez votre réponse svp">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputReponse2" class="col-sm-2 col-form-label">Réponse 2 :</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputReponse2" placeholder="Entrez votre réponse svp">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputReponse3" class="col-sm-2 col-form-label">Réponse 2 :</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputReponse3" placeholder="Entrez votre réponse svp">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">  </div>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="CheckMultiples">
                            <label class="form-check-label" for="CheckMultiples">
                                Choix multiples
                            </label>
                        </div>
                    </div>
                </div>
            </form>

            <p></p>
            <p></p>
            <p></p>
            <p></p>
            <fieldset style="text-align:center">
                <a href="@Url.Action("ConfirmationCreation")" class="btn btn-primary textall">Créer le sondage</a>

            </fieldset>
            <p></p>
            <p></p>
            <p></p>
            <p></p>
        </div>
        <div class="container-fluid card-group  text-white bg-primary mb-3 border-primary" ;">

            <div class="card-body">
                <h5 class="card-text"> <a href="@Url.Action("APropos") "><i class="fa fa-copyright text-white"> Copyright 2019 Petra Mazellier</i></a></h5>
            </div>
            <div class=" card-body">
                <h5 class="card-text"> <a href="@Url.Action("Condition") "><i class="fa fa-info-circle text-white">  Conditions d'utilisation</i></a></h5>
            </div>
            <div class="card-body">
                <h5 class="card-text"> <a href="@Url.Action("Confidentialite") "><i class="fa fa-lock text-white">  Confidentialité et cookies</i></a></h5>
            </div>
        </div>
    </div>
