@using StrawPoll.Models;
@model ResultatSondage
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Resultat</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <meta name="viewport" content="width=device-width" />

</head>
<body class="card bg-light  mb-3">

    <div class="card  mb-3">

        <div class="card-header text-dark bg-primary mb-3 text-center"><h1> <img src="../../Content/logo.jpg" />                        Petra's Straw Poll</h1></div>
        <div class="card-body text-primary">
            <h2 class="card-title text-dark text-center">
                Résultat
            </h2>
            <p></p>
            <form>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext text-center" value="@Model.SondageResultat.NomSondage">
                    </div>
                </div>
                @foreach (var reponseCourant in Model.ReponseResultatSondage)
                {
                    <h4 class="form-check ">
                        <input class="form-check-input  col" type="checkbox" name="@reponseCourant.IdReponse" id="@reponseCourant.IdReponse">
                        <label class="form-check-label col" for="@reponseCourant.IdReponse">
                            <input type="text" readonly class="form-control-plaintext text-primary  col" value="@reponseCourant.NomReponse">

                        </label>
                    </h4>

                <div class="form-group row">
                    <input type="text" readonly class="form-control-plaintext text-primary  col" value="@reponseCourant.NomReponse">
                    <div class="progress col">
                        <div class="progress-bar progress-bar-striped progress-bar-animated " role="progressbar" aria-valuenow="@Model.PourcentageReponse" aria-valuemin="0" aria-valuemax="100" style="width: 60%"></div>
                    </div>
                    <input type="text" readonly class="form-control-plaintext text-primary  col" value=" (@reponseCourant.NombreVoteReponse * 100 / @Model.NombreVoteTotal) %">
                    <input type="text" readonly class="form-control-plaintext text-primary  col" value=" @reponseCourant.NombreVoteReponse  Votes">
                </div>
                }
                <div class="form-group row">
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext text-center" value="@Model.NombreVoteTotal Votes">
                    </div>
                </div>
            </form>
        </div>

        <p></p>
        <p></p>
        <form>
            <div class="row">
                <p class="col">   </p>
                <div class="col">
                    <a href="@Url.Action("Vote")" class="btn col  btn-primary  ">Voter</a>
                </div>
                <p class="col">   </p>
                <div class="col">
                    <a href="@Url.Action("Resultat")" class="btn col btn-primary  ">Réactualisation</a>
                </div>
                <p class="col">   </p>
            </div>
        </form>

        <p></p>
        <p></p>
        <p></p>
        <p></p>

        <div class="container-fluid card-group   text-white bg-primary mb-3 border-primary" ;">

            <div class="card-body">
                <h5 class="card-text"> <a href="@Url.Action("APropos") "><i class="fa fa-copyright text-white"> Copyright 2019 Petra Mazellier</i></a></h5>
            </div>
            <div class=" card-body">
                <h5 class="card-text"> <a href="@Url.Action("Condition") "><i class="fa fa-info-circle text-white">  Conditions d'utilisation</i></a></h5>
            </div>
            <div class="card-body">
                <h5 class="card-text"> <a href="@Url.Action("Confidentialite") "><i class="fa fa-lock text-white ">  Confidentialité et cookies</i></a></h5>
            </div>
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
